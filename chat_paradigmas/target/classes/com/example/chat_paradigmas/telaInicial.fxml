    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label text="Digite a quantidade de telas" />
   <TextField fx:id="quantidade" alignment="CENTER" prefHeight="25.0" prefWidth="45.0" promptText="Int" />
    <Button onAction="#iniciar" text="Iniciar" />
</VBox>
